<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="at.aau.serg.sdlapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".network.viewModels.MyViewModelStore"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- ✅ SplashActivity ist Launcher und braucht exported=true -->
        <activity
            android:name="at.aau.serg.sdlapp.ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SDLApp.Splash"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ StartActivity: exported=false (keine externe Aufrufbarkeit nötig) -->
        <activity
            android:name="at.aau.serg.sdlapp.ui.StartActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"
            android:screenOrientation="landscape" />

        <!-- ✅ SettingsActivity -->
        <activity
            android:name="at.aau.serg.sdlapp.ui.SettingsActivity"
            android:exported="false"
            android:label="Einstellungen"
            android:theme="@style/Theme.MyApplication"
            android:screenOrientation="landscape" />

        <!-- ✅ BoardActivity -->
        <activity
            android:name="at.aau.serg.sdlapp.ui.BoardActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"
            android:screenOrientation="landscape" />

        <!-- (Optional) JobSelectionActivity, falls du sie starten möchtest -->
        <activity
            android:name="at.aau.serg.sdlapp.ui.JobSelectionActivity"
            android:exported="false"
            android:label="Job Auswahl"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name=".ui.PlayerStatsActivity"
            android:exported="true"
            android:label="Spielerübersicht"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.MyApplication" />

        <!-- exported for test purposes -->
        <activity
            android:name=".ui.HomeScreenActivity"
            android:exported="true"
            android:label="Homescreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.SDLApp.HomeScreen" />

        <!-- exported for test purposes -->

        <activity android:name=".ui.LobbyActivity"
            android:exported="true"
            android:label="Lobby"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.SDLApp.HomeScreen"/>


    </application>

</manifest>
