<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twoJobRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent">

    <!-- Linke Jobkarte -->
    <LinearLayout
        android:id="@+id/jobCardLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/job_popup_background"
        android:padding="16dp"
        android:layout_marginEnd="32dp">

        <TextView
            android:id="@+id/jobTitleLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jobtitel"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jobSalaryLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Gehalt" />

        <TextView
            android:id="@+id/jobBonusLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ Bonus" />

        <Button
            android:id="@+id/buttonAcceptLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job annehmen"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Rechte Jobkarte -->
    <LinearLayout
        android:id="@+id/jobCardRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/job_popup_background"
        android:padding="16dp"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/jobTitleRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jobtitel"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jobSalaryRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Gehalt" />

        <TextView
            android:id="@+id/jobBonusRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ Bonus" />

        <Button
            android:id="@+id/buttonAcceptRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job annehmen"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>
